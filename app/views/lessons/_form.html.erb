<%= form_for lesson, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: "form-control" %>
      <span class="text-danger"><%= error_message lesson, :title %></span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :content, class: "form-control" %>
      <span class="text-danger"><%= error_message lesson, :content %></span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :lesson_doc, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.file_field :lesson_doc, class: "form-control js-file-pdf" %>
      <span class="text-danger"><%= error_message lesson, :lesson_doc %></span><br>

      <embed class="js-preview-pdf" src="<%= lesson.lesson_doc.url %>" width="100%" height="500px" type="application/pdf"/>
      <%= hidden_field :lesson, :lesson_doc_url, value: lesson.lesson_doc.path %>
    </div>
  </div>

  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
